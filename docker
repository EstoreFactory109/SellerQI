# Build stage for React
FROM node:22.17-alpine AS frontend-build

WORKDIR /app

# Copy and install frontend dependencies
COPY client/package*.json ./client/
RUN cd client && npm ci

# Copy frontend source and build
COPY client/ ./client/
RUN cd client && npm run build

# Production stage
FROM node:22.17-alpine

WORKDIR /app

# Copy backend package files from server directory
COPY server/package*.json ./
RUN npm ci --only=production

# Copy backend source from server directory
COPY server/ ./

# Copy built React app from frontend-build stage
COPY --from=frontend-build /app/client/build ./client/build

# Expose port
EXPOSE 3000

# Start the server (adjust if your main file is different)
CMD ["node", "app.js"]
